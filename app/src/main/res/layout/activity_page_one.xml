<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".MainActivity">

        <com.example.textviewexample.LinedEditText
            android:id="@+id/mOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="12345abcy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mOne" />

        <TextView
            android:id="@+id/mThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mTwo" />


        <TextView
            android:id="@+id/mFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mThree" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>